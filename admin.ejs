<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - NOVAX STREAM</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>Admin Panel</h1>
            <div class="profile-dropdown">
                <div class="profile-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="dropdown-content">
                    <a href="/admin/change-credentials"><i class="fas fa-key"></i> Change Credentials</a>
                    <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <p style="color: red; background-color: #ffe0e0; padding: 10px; border-radius: 5px; margin-bottom: 15px;"><%= error %></p>
        <% } %>

        <h2>Add New Match</h2>
        <form action="/admin/add_match" method="POST" class="match-form">
            <div class="form-group">
                <input type="text" name="team_a" placeholder="Team A Name" required>
                <input type="text" name="team_b" placeholder="Team B Name" required>
                <input type="text" name="league" placeholder="League (e.g., Premier League)" list="league-list">
                <input type="datetime-local" name="match_time" required>
                <input type="text" name="team_a_logo" placeholder="Team A Logo URL">
                <input type="text" name="team_b_logo" placeholder="Team B Logo URL">
            </div>
            <datalist id="league-list">
                <% leagues.forEach(l => { %>
                    <option value="<%= l.league %>">
                <% }); %>
            </datalist>

            <h3 class="stream-header">Stream Links (at least one is required)</h3>
            <div id="stream-inputs-container">
                <div class="form-group stream-inputs">
                    <input type="text" name="stream_name[]" placeholder="Stream 1 Name (e.g., HD Stream)">
                    <input type="text" name="stream_url[]" placeholder="Stream 1 URL (M3U8)" required>
                </div>
            </div>
            <button type="button" id="add-stream-btn" class="btn" style="background-color: var(--info-color); margin-bottom: 15px;">+ Add Another Stream</button>

            <div class="form-group" style="grid-template-columns: 1fr;">
                <label style="display: flex; align-items: center; gap: 10px;">
                    <input type="checkbox" name="auto_live" value="1" style="width: auto;">
                    Auto-Set Live? (Match will go live automatically at match time)
                </label>
            </div>

            <button type="submit">Add Match</button>
        </form>

        <h2>All Matches</h2>
        <div class="table-wrapper">
            <table class="match-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Team A</th>
                        <th>Team B</th>
                        <th>League</th>
                        <th>Match Time</th>
                        <th>Live Status</th>
                        <th>Auto-Live</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% matches.forEach(match => { %>
                        <tr>
                            <td><%= match.id %></td>
                            <td>
                                <div class="match-cell">
                                    <% if (match.team_a_logo) { %><img src="<%= match.team_a_logo %>" alt="Team A Logo"><% } %>
                                    <%= match.team_a %>
                                </div>
                            </td>
                            <td>
                                <div class="match-cell">
                                    <% if (match.team_b_logo) { %><img src="<%= match.team_b_logo %>" alt="Team B Logo"><% } %>
                                    <%= match.team_b %>
                                </div>
                            </td>
                            <td><%= match.league %></td>
                            <td><%= new Date(match.match_time).toLocaleString() %></td>
                            <td>
                                <% if (match.is_live === 1) { %>
                                    <span class="status-live">LIVE</span>
                                <% } else { %>
                                    <span class="status-offline">OFFLINE</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (match.auto_live === 1) { %>
                                    <i class="fas fa-check-circle" style="color: #28a745;"></i> Yes
                                <% } else { %>
                                    <i class="fas fa-times-circle" style="color: #dc3545;"></i> No
                                <% } %>
                            </td>
                            <td class="actions">
                                <a href="/admin/toggle_live/<%= match.id %>" class="btn btn-toggle">Toggle Live</a>
                                <a href="/admin/edit/<%= match.id %>" class="btn btn-edit">Edit</a>
                                <a href="/admin/delete/<%= match.id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this match?');">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.getElementById('add-stream-btn').addEventListener('click', () => {
            const container = document.getElementById('stream-inputs-container');
            const streamCount = container.getElementsByClassName('stream-inputs').length + 1;

            const newStreamGroup = document.createElement('div');
            newStreamGroup.className = 'form-group stream-inputs';
            newStreamGroup.innerHTML = `
                <input type="text" name="stream_name[]" placeholder="Stream ${streamCount} Name">
                <input type="text" name="stream_url[]" placeholder="Stream ${streamCount} URL (M3U8)">
                <button type="button" class="btn btn-delete" style="grid-column: 1 / -1;" onclick="removeStream(this)">Remove</button>
            `;
            container.appendChild(newStreamGroup);
        });

        function removeStream(button) {
            // button -> div.form-group -> remove
            button.parentElement.remove();
        }
    </script>

</body>
</html>