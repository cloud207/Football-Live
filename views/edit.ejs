<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Match - Admin Panel</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1><i class="fas fa-cogs"></i> Admin Panel</h1>
            <div class="profile-dropdown">
                <i class="fas fa-user-circle profile-icon"></i>
                <div class="dropdown-content">
                    <a href="/admin/change-credentials"><i class="fas fa-key"></i> Change Credentials</a>
                    <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <%- include('admin-nav', { page: 'matches' }) %>
        <h2>Edit Match</h2>
        <form action="/admin/edit/<%= match.id %>" method="POST" class="match-form">
            <div class="form-group">
                <input type="text" name="team_a" placeholder="Team A Name" value="<%= match.team_a %>" required>
                <input type="text" name="team_b" placeholder="Team B Name" value="<%= match.team_b %>" required>
                <input type="text" name="league" placeholder="League (e.g., Premier League)" value="<%= match.league %>" list="league-list">
                <datalist id="league-list">
                    <% leagues.forEach(l => { %>
                        <option value="<%= l.league %>">
                    <% }); %>
                </datalist>
                <% 
                    // match_time ကို datetime-local format နဲ့ ပြောင်း
                    const matchTime = new Date(match.match_time);
                    const year = matchTime.getFullYear();
                    const month = (matchTime.getMonth() + 1).toString().padStart(2, '0');
                    const day = matchTime.getDate().toString().padStart(2, '0');
                    const hours = matchTime.getHours().toString().padStart(2, '0');
                    const minutes = matchTime.getMinutes().toString().padStart(2, '0');
                    const formattedMatchTime = `${year}-${month}-${day}T${hours}:${minutes}`;
                %>
                <input type="datetime-local" name="match_time" value="<%= formattedMatchTime %>" required>
                <input type="text" name="team_a_logo" placeholder="Team A Logo URL" value="<%= match.team_a_logo %>">
                <input type="text" name="team_b_logo" placeholder="Team B Logo URL" value="<%= match.team_b_logo %>">
            </div>

            <h3 class="stream-header">Stream Links</h3>
            <% 
                let streams = [];
                try {
                    streams = JSON.parse(match.stream_urls || '[]');
                } catch (e) {
                    console.error("Error parsing stream_urls:", e);
                }
            %>
            <div id="stream-inputs-container">
                <% streams.forEach((stream, index) => { %>
                    <div class="form-group stream-inputs">
                        <input type="text" name="stream_name[]" placeholder="Stream <%= index + 1 %> Name" value="<%= stream.name %>">
                        <input type="text" name="stream_url[]" placeholder="Stream <%= index + 1 %> URL (M3U8)" value="<%= stream.url %>" <%= index === 0 ? 'required' : '' %>>
                        <% if (index > 0) { %>
                            <button type="button" class="btn btn-delete" style="grid-column: 1 / -1;" onclick="removeStream(this)">Remove</button>
                        <% } %>
                    </div>
                <% }); %>
            </div>
            <button type="button" id="add-stream-btn" class="btn" style="background-color: var(--info-color); margin-bottom: 15px;">+ Add Another Stream</button>


            <div class="form-group" style="grid-template-columns: 1fr;">
                <label style="display: flex; align-items: center; gap: 10px;">
                    <input type="checkbox" name="auto_live" value="1" style="width: auto;" <%= match.auto_live === 1 ? 'checked' : '' %>>
                    Auto-Set Live? (Match will go live automatically at match time)
                </label>
            </div>

            <button type="submit">Update Match</button>
            <a href="/admin" class="btn btn-cancel">Cancel</a>
        </form>
    </div>

    <script>
        document.getElementById('add-stream-btn').addEventListener('click', () => {
            const container = document.getElementById('stream-inputs-container');
            const streamCount = container.getElementsByClassName('stream-inputs').length + 1;

            const newStreamGroup = document.createElement('div');
            newStreamGroup.className = 'form-group stream-inputs';
            newStreamGroup.innerHTML = `
                <input type="text" name="stream_name[]" placeholder="Stream ${streamCount} Name">
                <input type="text" name="stream_url[]" placeholder="Stream ${streamCount} URL (M3U8)">
                <button type="button" class="btn btn-delete" style="grid-column: 1 / -1;" onclick="removeStream(this)">Remove</button>
            `;
            container.appendChild(newStreamGroup);
        });

        function removeStream(button) {
            // button -> div.form-group -> remove
            button.parentElement.remove();
        }
    </script>
</body>
</html>