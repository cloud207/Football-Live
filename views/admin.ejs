<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="admin-container">
        <h1>Football Live Admin Panel</h1>

        <form action="/admin/add_match" method="POST" class="match-form">
            <h2>Add New Match</h2>
            <div class="form-group">
                <input type="text" name="team_a" placeholder="Team A" required>
                <input type="text" name="team_b" placeholder="Team B" required>
            </div>
            <div class="form-group">
                <input type="text" name="league" placeholder="League Name">
                <input type="datetime-local" name="match_time" required>
            </div>
            
            <div class="form-group">
                <input type="text" name="team_a_logo" placeholder="Team A Logo URL">
                <input type="text" name="team_b_logo" placeholder="Team B Logo URL">
            </div>
            <div class="form-group">
                <input type="text" name="stream_url" placeholder="Stream URL (.m3u8)" required>
            </div>
            <button type="submit">Add Match</button>
        </form>

        <h2>Match List</h2>
        <table class="match-table">
            <thead>
                <tr>
                    <th>Match</th>
                    <th>League</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% matches.forEach(match => { %>
                    <tr>
                        <td><%= match.team_a %> vs <%= match.team_b %></td>
                        <td><%= match.league %></td>
                        <td><%= new Date(match.match_time).toLocaleString() %></td>
                        <td>
                            <% if (match.is_live === 1) { %>
                                <span class="status-live">LIVE</span>
                            <% } else { %>
                                <span class="status-offline">OFFLINE</span>
                            <% } %>
                        </td>
                        <td class="actions">
                            <a href="/admin/toggle_live/<%= match.id %>" class="btn btn-toggle">
                                <%= match.is_live === 1 ? 'Set Offline' : 'Set Live' %>
                            </a>
                            <a href="/admin/delete/<%= match.id %>" class="btn btn-delete" 
                               onclick="return confirm('Are you sure you want to delete this match?')">
                               Delete
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </div>
</body>
</html>