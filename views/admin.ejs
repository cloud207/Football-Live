<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>Admin Panel</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>Football Live Admin Panel</h1>
            <a href="/logout" class="btn btn-logout">Logout</a>
        </div>
        
        <form action="/admin/add_match" method="POST" class="match-form">
            </form>

        <h2>Match List</h2>
        
        <div class="table-wrapper">
            <table class="match-table">
                <thead>
                    <tr>
                        <th>Match</th>
                        <th>League</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% matches.forEach(match => { %>
                        <tr>
                            <td>
                                <div class="match-cell">
                                    <img src="<%= match.team_a_logo || 'https://placehold.co/30x30/333/FFF?text=A' %>" alt="">
                                    <span><%= match.team_a %> vs <%= match.team_b %></span>
                                    <img src="<%= match.team_b_logo || 'https://placehold.co/30x30/333/FFF?text=B' %>" alt="">
                                </div>
                            </td>
                            <td><%= match.league %></td>
                            <td><%= new Date(match.match_time).toLocaleString() %></td>
                            <td>
                                </td>
                            <td class="actions">
                                <a href="/admin/toggle_live/<%= match.id %>" class="btn btn-toggle">
                                    <%= match.is_live === 1 ? 'Set Offline' : 'Set Live' %>
                                </a>
                                <a href="/admin/edit/<%= match.id %>" class="btn btn-edit">
                                    Edit
                                </a>
                                <a href="/admin/delete/<%= match.id %>" class="btn btn-delete" 
                                   onclick="return confirm('Are you sure?')">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>