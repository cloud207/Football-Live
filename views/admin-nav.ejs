<style>
    .admin-nav {
        display: flex;
        gap: 10px;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 1rem;
    }
    .admin-nav a {
        padding: 10px 15px;
        text-decoration: none;
        color: var(--text-secondary);
        border-radius: 5px;
        transition: background-color 0.2s, color 0.2s;
    }
    .admin-nav a.active, .admin-nav a:hover {
        background-color: var(--dark-bg-tertiary);
        color: var(--text-primary);
    }
</style>
<nav class="admin-nav">
    <a href="/admin" class="<%= typeof page !== 'undefined' && page === 'matches' ? 'active' : '' %>"><i class="fas fa-futbol"></i> Matches</a>
    <a href="/admin/highlights" class="<%= typeof page !== 'undefined' && page === 'highlights' ? 'active' : '' %>"><i class="fas fa-star"></i> Highlights</a>
</nav>